- content_for :content_title do
  Please enter email to reset your password

- if notice.present?
  .notice= notice
- if alert.present?
  .alert= alert

= form_tag reset_password_path, id: :reset_password do
  = email_field_tag :email, nil, placeholder: 'Email', autofocus: true
  .row
    = button_tag 'Reset Password'
